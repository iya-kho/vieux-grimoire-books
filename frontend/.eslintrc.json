{
    "env": {
        "browser": true,
        "es2021": true
    },
    "root": true,
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
    "indent": ["error", 2],
    "linebreak-style": 0,
    "quotes": [1, "single"],
    "avoidEscape": 0,
    "allowTemplateLiterals": 0,
    "semi": ["error", "always"],
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }]
  }
}
